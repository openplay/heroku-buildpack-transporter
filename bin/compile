#!/usr/bin/env bash
# bin/compile <build> <cache> <env>

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

function topic() {
  echo "-----> $*"
}

topic "Install Apple Transporter"

INSTALL_DIR="$BUILD_DIR"
PKG_CACHE_DIR="$CACHE_DIR/itms"
LP_DIR=`cd $(dirname $0); cd ..; pwd`

mkdir -p $INSTALL_DIR
cd $INSTALL_DIR
curl -L --silent "$(cat $ENV_DIR/HEROKU_BUILDPACK_TRANSPORTER_DOWNLOAD_URL)" | tar xz

topic "Writing profile script"
mkdir -p $BUILD_DIR/.profile.d
cat <<EOF >$BUILD_DIR/.profile.d/transporter.sh
export PATH="\$PATH:\$HOME/itms/bin"
EOF

export PATH="$PATH:$BUILD_DIR/itms/bin"

# give environment to later buildpacks
export | grep -E -e ' (PATH)=' > "$LP_DIR/export"
